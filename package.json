{
  "name": "leave-tracker-api",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google-cloud/storage": "6.0.1",
    "@mikro-orm/cli": "5.1.5",
    "@mikro-orm/core": "5.1.5",
    "@mikro-orm/migrations": "5.1.5",
    "@mikro-orm/nestjs": "5.0.1",
    "@mikro-orm/postgresql": "5.1.5",
    "@nestjs-modules/mailer": "1.6.1",
    "@nestjs/axios": "0.0.8",
    "@nestjs/common": "8.4.5",
    "@nestjs/config": "2.0.1",
    "@nestjs/core": "8.4.5",
    "@nestjs/jwt": "8.0.1",
    "@nestjs/platform-fastify": "8.4.5",
    "@nestjs/platform-ws": "8.4.5",
    "@nestjs/schedule": "2.0.1",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/websockets": "8.4.5",
    "bcrypt": "5.0.1",
    "cache-manager": "3.6.3",
    "cache-manager-fs-hash": "1.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "fastify-cookie": "5.7.0",
    "fastify-multipart": "5.4.0",
    "fastify-swagger": "5.2.0",
    "googleapis": "100.0.0",
    "handlebars": "4.7.7",
    "nest-winston": "1.6.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "winston": "3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.5",
    "@types/bcrypt": "5.0.0",
    "@types/busboy": "1.5.0",
    "@types/cache-manager": "3.4.3",
    "@types/cron": "2.0.0",
    "@types/inline-css": "3.0.1",
    "@types/jest": "27.5.1",
    "@types/node": "17.0.35",
    "@types/nodemailer": "6.4.4",
    "@types/supertest": "2.0.12",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "lint-staged": "13.0.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "supertest": "6.2.3",
    "ts-jest": "28.0.3",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "**/migrations"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "dependencyDashboard": false,
    "separateMajorMinor": false,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "minor",
          "pin",
          "digest"
        ],
        "automerge": true,
        "automergeType": "branch"
      }
    ],
    "schedule": [
      "every weekend"
    ]
  }
}
